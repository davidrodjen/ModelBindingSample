@model ModelBindingSample.Models.Student
@{
    ViewData["Title"] = 
        "Model Binding Sample";
}

<h1>Model Binding Sample</h1>

<form method="post">
    <label asp-for="FullName"></label>
    <input asp-for="FullName" />
    <span asp-validation-for="FullName"></span>
    <br />

    <label asp-for="DateOfBirth"></label>
    <input asp-for="DateOfBirth" />
    <span asp-validation-for="DateOfBirth"></span>
	<br />

    <label asp-for="FavoriteNumber"></label>
    <input asp-for="FavoriteNumber" />
    <span asp-validation-for="FavoriteNumber"></span>
	<br />

    <input type="submit" value="Create Student" />

</form>
